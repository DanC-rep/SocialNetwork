@model EditUserRolesViewModel
@using Microsoft.AspNetCore.Identity
@{
	Layout = "_Layout";
}

<h1>Редактирование ролей пользователя @Model.Email</h1>
<div>
	<a class="btn btn-outline-danger" asp-action="UsersList">Отмена</a>
</div>
<form asp-action="EditUserRoles" method="post">
	<input type="hidden" name="id" value="@Model.UserId"/>
	<div class="form-group">
		@foreach (IdentityRole role in Model.AllRoles)
		{
			<input type="checkbox" name="roles" value="@role.Name" 
			@(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "")/> @role.Name <br />
		}
	</div>
	<button type="submit" class="btn btn-primary">Завершить</button>
</form>