<!DOCTYPE html>
<html>

<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link href="css\style.css" />
  <meta name="viewport" content="width=device-width" />
  <title>SocialNetwork</title>
</head>

<body class="m-1 p-1">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" asp-controller="Home" asp-action="Index">Social Network</a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          @if (User.Identity.IsAuthenticated)
          {
            <li class="nav-item">
              <a class="nav-link" asp-controller="Account" asp-action="MyProfile">Мой профиль</a>
            </li>
            <li class="nav-item">
              @if (User.IsInRole("Admin"))
              {
                <a class="nav-link" asp-controller="Admin" asp-action="Index">Панель
                  администратора</a>
              }
            </li>
            <li class="nav-item">
              <form method="post" asp-controller="Account" asp-action="Logout">
                <button type="submit" class="nav-link">Выход</button>
              </form>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Account" asp-action="ChangePassword">Изменить пароль</a>
            </li>
          }
          else
          {
            <li class="nav-item">
              <a class="nav-link" asp-controller="Account" asp-action="Register">Зарегистрироваться</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Account" asp-action="Login">Вход</a>
            </li>
          }
        </ul>
      </div>
    </div>
  </nav>
  @RenderBody()
</body>

</html>
